<Page
    x:Class="CurrencyConverter.SaveFile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CurrencyConverter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Style ="{StaticResource GridPage}">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Text="Сохранить файл" Style="{StaticResource PageTitleTextBlockStyle}" Margin="10,0,0,0"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource ButtonStyle}" Click="ButtonJsonSave_Click">
                <TextBlock Text="Сохранить как JSON" Style="{StaticResource WhiteTextBlockStyle}"/>
            </Button>
            <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource ButtonStyle}">
                <TextBlock Text="Сохранить как таблицу" Style="{StaticResource WhiteTextBlockStyle}"/>
            </Button>
        </Grid>
    </Grid>
</Page>
